# AI Provider Configuration
# Choose which AI provider to use: 'gemini', 'openai', or 'claude'
AI_PROVIDER=gemini

# Gemini Configuration (required if AI_PROVIDER=gemini)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-flash

# OpenAI Configuration (required if AI_PROVIDER=openai)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o

# Claude/Anthropic Configuration (required if AI_PROVIDER=claude)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
CLAUDE_MODEL=claude-sonnet-4-5

# ChatKit Configuration
# Get your workflow ID from https://platform.openai.com/chatkit
VITE_CHATKIT_WORKFLOW_ID=your_workflow_id_here

# Server Configuration
PORT=3001

# Supabase Configuration
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key
# Optional: override default table names if you use different ones
# SUPABASE_PROFILES_TABLE=researcher_profiles
# SUPABASE_COMPARE_TABLE=research_compare_snapshots

# Frontend API Configuration
# Leave blank to use same origin in production. Set to http://localhost:3001 for local dev.
VITE_API_BASE_URL=http://localhost:3001
